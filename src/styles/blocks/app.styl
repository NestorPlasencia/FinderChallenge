.app
    max-width 1024px
    margin 0 auto
    header
    	padding-bottom 2rem
.logo-container
	min-width 250px
	margin-right 2rem

.search-form-container 
	width 70%

.container-fluid
	display flex
	justify-content space-around
	flex-wrap wrap

.card
	max-width 250px
	min-width 200px
	margin 1rem
	display flex
	align-items center
	flex-direction column

.link 
	cursor pointer
	color blue
	text-decoration underline blue

.hide-link
	opacity 0
	cursor default
	pointer-events none